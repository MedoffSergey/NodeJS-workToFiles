              input#inputPassword.form-control(type='password' placeholder='***********')
                
          button.btn.btn-primary.float-left(type='button' onclick = 'loginAsAdmin()') Администрирование 
           
          button.btn.btn-success.float-right(type='button' onclick = 'loginAsUser()') Вход
          
