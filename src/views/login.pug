      .card.col-4.my-5.box-shadow
        .card-body
          form
            .form-group
              h4.text-left Вход
              label.col-form-label(for='exampleInputEmail1') Login
              input#inputLogin.form-control(type='text' placeholder='ivanov.ivan@mail.ru')
